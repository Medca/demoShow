<script type="text/javascript" src="js/jquery-1.11.1.min.js"></script>
<script type="text/javascript">
	$(function(){
		var index = 0;
		//轮展图切换 
		$("#b_btn_mini li").mouseover(function(){
			// 控制小按钮选中
			$(this).addClass("no").siblings().removeClass("no");
			// 联动（图片和小按钮）
			var _index = $(this).index();
			index = _index;
			$("#b_pic li").eq(_index).fadeIn("slow").siblings().hide();
			// 获取选中背景颜色，切换
			var background = $(this).data("color");
			$(this).parents(".b_bg").css("background",background);
		});
		//	点击下一页
		$(".next").click(function(){
			index++;
			var length = $("#b_pic li").length;
			if(index >= length){
				index = 0;
			}
			// 联动背景颜色
			var background = $("#b_btn_mini li").eq(index).data("color");
			$(this).parents(".b_bg").css("background",background);
			//联动图片
			$("#b_pic li").eq(index).fadeIn("slow").siblings().hide();
			//联动小按钮
			$("#b_btn_mini li").eq(index).addClass("no").siblings().removeClass("no");
		}).mouseover(function(){
			clearInterval(timer);
		});
		//点击上一页
		$(".pre").click(function(){
			index--;
			var length = $("#b_pic li").length;
			if(index < 0){
				index = length - 1;
			}
			//联动背景颜色
			var background = $("#b_btn_mini li").eq(index).data("color");
			$(this).parents(".b_bg").css("background",background);
			//联动图片
			$("#b_pic li").eq(index).fadeIn("slow").siblings().hide();
			//联动小按钮
			$("#b_btn_mini li").eq(index).addClass("no").siblings().removeClass("no");
		};

		$(".b_con").hover(function(){
			clearInterval(timer);
		},function(){
			clearInterval(timer);
			autoPlay();		
		});

		var timer = null;
		//调用
		autoPlay();
		
		//自动轮播
		/*
		function autoPlay(){		
			timer=setInterval(function(){
			index++;
			var length = $("#b_pic li").lenth;
			//联动背景色
			var background = $("#b_btn_mini li").eq(index).data("color");
			$(".b_bg").css("background",background);
			//联动图片
			$("#b_pic li").eq(index).fadeIn("slow").siblings().hide();
			//联动小按钮
			$("#b_btn_mini li").eq(index).addClass("no").siblings().removeClass("no");
		},2000);};
		*/
		function autoPlay(){
				timer = setInterval(function(){$(".next").trigger("click");},1000);
		};

	});

</script>
